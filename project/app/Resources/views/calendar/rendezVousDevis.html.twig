<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <span class="col-xs-2 text-center">
        {% if rdv.planifiable.annule %}
          <button class="btn btn-md btn-block btn-danger">{{ rdv.planifiable.getStatutLibelle() }}</button>
        {% elseif rdv.planifiable.aPlanifie %}
          <button class="btn btn-md btn-block btn-primary">{{ rdv.planifiable.getStatutLibelle() }}</button>
        {% elseif rdv.planifiable.planifie %}
          <button style="margin-bottom: 10px;" class="btn btn-md btn-block btn-warning">Planifié</button>
        {% elseif rdv.planifiable.realise %}
          {% if (rdv.planifiable.getPdfNonEnvoye) %}
            <button class="btn btn-md btn-block" style="background-color:{{rdv.getStatusColor()}}; color:{{rdv.getTextColor()}};">
              Pdf non envoyé
            </button>
          {% else %}
            <button class="btn btn-md btn-block" style="background-color:{{rdv.getStatusColor()}}; color:{{rdv.getTextColor()}};;">
              Pdf envoyé
            </button>
          {% endif %}
        {% else %}
          <button class="btn btn-md btn-block">Libre</button>
        {% endif %}
      </span>
        <h3 class="modal-title col-xs-9">
          {{ rdv.titre }}
            <br /><small><i class="mdi mdi-today mdi-lg"></i> <a title="Voir sur le calendrier" href='{% if (rdv.participants | length >= 1) %}{{ path('calendar', {'date': rdv.dateDebut | date('Y-m-d'), 'technicien': rdv.participants.first.id, 'id': "0"}) }}{% else %}{{ path('calendarManuel', {'date': rdv.dateDebut | date('Y-m-d')}) }}{% endif %}'>
                {{ rdv.dateDebut | localizeddate('full', 'none') | capitalize }} de {{ rdv.dateDebut | date('H') }}:{{ rdv.dateDebut | date('i') }} à {{ rdv.dateFin | date('H') }}:{{ rdv.dateFin | date('i') }}</span></a>{% if(rdv.duree) %}
            <span><i class="mdi mdi-schedule mdi-lg"></i> {{ rdv.duree }}{% endif %}</small>
        </h3>
    </div>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="modal-body form-horizontal">
      {% if (rdv.planifiable) %}
        {% if (rdv.planifiable.annule) %}
          <p class="bg-danger" style="padding: 10px;">Annulé {% if rdv.planifiable.commentaire %}pour le motif : {{ rdv.planifiable.commentaire }}{% endif %}</p>
        {% endif %}
        <div class="form-group" style="margin-bottom: 0">
          {% if(rdv.planifiable.commentaireInterne) %}
            <label class="control-label col-xs-2">Com. interne</label>
            <div class="col-xs-10">
              <p class="form-control-static">
              {{ rdv.planifiable.commentaireInterne | nl2br  }}
              </p>
            </div>
          {% endif %}
        </div>
        <div class="form-group" style="margin-bottom: 0">
          <label class="control-label col-xs-2">Lieu</label>
          <div class="col-xs-10">
            <p class="form-control-static">
            <a title="Voir la société" href="{{ path('societe_visualisation', {'id': rdv.planifiable.etablissement.societe.id })}}">
              {% if rdv.planifiable.etablissement.societe.raisonSociale != rdv.planifiable.etablissementInfos.nom %}
                {{ rdv.planifiable.etablissement.societe.raisonSociale }}, 
              {% endif %}
              {{ rdv.planifiable.etablissementInfos.nom }},
              {{ rdv.planifiable.etablissementInfos.adresse.adresse }}
              {{ rdv.planifiable.etablissementInfos.adresse.codePostal }}
              {{ rdv.planifiable.etablissementInfos.adresse.commune }}
            </a>
            </p>
          </div>
        </div>
        <div class="form-group" style="margin-bottom: 0">
          <label class="control-label col-xs-2">Prestations</label>
          <div class="col-xs-10">
            <p class="form-control-static">
              Livraison
            </p>
          </div>
        </div>
        {% if rdv.planifiable and rdv.planifiable.realise %}
          <div class="form-group" style="margin-bottom: 0">
            <label class="control-label col-xs-2">Technicien</label>
            <div class="col-xs-10">
              <p class="form-control-static">
              {% for tech in rdv.planifiable.techniciens %}
                {{ tech.identite }}
              {% endfor %}
              </p>
            </div>
          </div>
          <div class="form-group" style="margin-bottom: 0">
            <label class="control-label col-xs-2">Durée effective</label>
            <div class="col-xs-10">
              <p class="form-control-static">
              {{ rdv.planifiable.duree }}
              </p>
            </div>
          </div>
          <div class="form-group" style="margin-bottom: 0">
            <label class="control-label col-xs-2">Rapport de visite</label>
            <div class="col-xs-10">
              <p class="form-control-static">
              {{ rdv.planifiable.description | nl2br }}
              </p>
            </div>
          </div>
          {% if(rdv.planifiable.commentaireInterne) %}
            <div class="form-group" style="margin-bottom: 0">
              <label class="control-label col-xs-2">Com. interne</label>
              <div class="col-xs-10">
                <p class="form-control-static">
                {{ rdv.planifiable.commentaireInterne | nl2br }}
                </p>
              </div>
            </div>
          {% endif %}
          {% if(rdv.planifiable.nomTransmission or rdv.planifiable.emailTransmission or rdv.planifiable.secondEmailTransmission) %}
            <div class="form-group" style="margin-bottom: 0">
              <label class="control-label col-xs-2">Nom / Email</label>
              <div class="col-xs-10">
                <p class="form-control-static">
                  {% if(rdv.planifiable.nomTransmission) %}{{ rdv.planifiable.nomTransmission }}{% else %}pas de nom{% endif %} /
                  {% if(rdv.planifiable.emailTransmission) %}{{ rdv.planifiable.emailTransmission }}{% else %}pas d'email{% endif %} /
                  {% if(rdv.planifiable.secondEmailTransmission) %}{{ rdv.planifiable.secondEmailTransmission }}{% else %}pas de second email{% endif %}
                </p>
              </div>
            </div>
          {% endif %}
          {% if(rdv.planifiable.signatureBase64) %}
            <div class="form-group" style="margin-bottom: 0">
              <label class="control-label col-xs-2">Signature</label>
              <div class="col-xs-4" style="padding: 0 0 0 15px; margin:0;" >
                <div style="height:50px; width:145px;">
                  <div class="well" style="padding:0; margin-bottom:0;" >
                    <img src="{{ rdv.planifiable.signatureBase64 }}" height="50px;" width="145px;" >
                  </div>
                </div>
              </div>
            </div>
          {% endif %} {# rdv.planifiable.signatureBase64 #}
        {% endif %} {# rdv.planifiable.realise #}
      {% endif %} {# rdv.planifiable #}

      <hr style="margin-top: 0;" />

      {% if form.titre is defined %}
        <div class="form-group">
          {{ form_errors(form.titre) }}
          {{ form_label(form.titre, "Titre", {'label_attr': {'class': 'col-xs-2 contral-label'}}) }}
          <div class="col-xs-10">
            {{ form_widget(form.titre, {'attr': {'autofocus': 'autofocus'}}) }}
          </div>
        </div>
      {% endif %}

        <div class="form-group">
          <div class="col-xs-10 col-xs-offset-2">
            {{ form_label(form.rendezVousConfirme) }}
            {{ form_widget(form.rendezVousConfirme) }}
          </div>
        </div>

        <div class="form-group">
          {{ form_label(form.dateFin, "Techniciens", {'label_attr': {'class': 'col-xs-2 contral-label'}}) }}
          <div class="col-xs-10">
            {{ form_widget(form.participants) }}
          </div>
          <div class="col-xs-10 col-xs-offset-2">
            {{ form_widget(form.all) }}
            {{ form_label(form.all) }}
          </div>
        </div>

        <hr />

        <div class="form-group">
          {{ form_errors(form.dateDebut) }}
          {{ form_label(form.dateDebut, "Du", {'label_attr': {'class': 'col-xs-2 contral-label'}}) }}
          <div class="col-xs-7">
            <div class="input-group">
              {{ form_widget(form.dateDebut) }}
              <div class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></div>
            </div>
          </div>
          <div class="col-xs-3 bootstrap-timepicker timepicker">
            <div class="input-group">
              {{ form_widget(form.timeDebut) }}
              <div class="input-group-addon"><i class="glyphicon glyphicon-time"></i></div>
            </div>
          </div>
        </div>

        <div class="form-group">
          {{ form_errors(form.dateFin) }}
          {{ form_label(form.dateFin, "Au", {'label_attr': {'class': 'col-xs-2 contral-label'}}) }}
          <div class="col-xs-7">
            <div class="input-group">
              {{ form_widget(form.dateFin) }}
              <div class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></div>
            </div>
          </div>
          <div class="col-xs-3 bootstrap-timepicker timepicker">
            <div class="input-group">
              {{ form_widget(form.timeFin) }}
              <div class="input-group-addon"><i class="glyphicon glyphicon-time"></i></div>
            </div>
          </div>
        </div>

        <hr />

        <div class="form-group">
          {{ form_errors(form.description) }}
          {{ form_label(form.description, "Commentaire", {'label_attr': {'class': 'col-xs-2 contral-label'}}) }}
          <div class="col-xs-10">
            {{ form_widget(form.description) }}
          </div>
        </div>

        <div class="modal-footer">
          <div class="row">
            <div class="col-xs-2 text-left">
              <button type="button" class="btn btn-block btn-default" data-dismiss="modal">
                Fermer
              </button>
            </div>
            <div class="col-xs-7 text-center">
              <div class="btn-group">
                {% if rdv.id %}
                  <a class="btn btn-sm btn-default text-danger rdv-deplanifier-link"
                    onclick="return confirm('Êtes vous sûr de vouloir supprimer ce rendez-vous ?')"
                    href="{{ path('calendarDelete', {'id': rdv.id, 'service': service }) }}">
                      <span class="text-danger"><i class="glyphicon glyphicon-trash"></i> Supprimer RDV</span>
                  </a>
                {% endif %}

                {% if (rdv.id and rdv.planifiable) %}
                  <a class="btn btn-sm btn-default" href="{{ path('devis_modification', {'id': rdv.devis.id, 'service': service })}}"><span class="glyphicon glyphicon-pencil"></span> Rapport visite</a>
                {% endif %}

                {% if (rdv.planifiable and not rdv.id) %}
                  <a href="{{ path('devis_annulation',{ 'id': rdv.planifiable.id, 'service': service }) }}" class="btn btn-sm btn-default text-danger" onclick="return confirm('Êtes vous sûr de vouloir passer ce passage en annuler ?')"><span class="text-danger">Annuler le devis</span></a>
                {% endif %}
              </div>
            </div>
            <div class="col-xs-3 text-right">
              <button data-loading-text="En cours ..." autocomplete="off" class="btn btn-primary btn-block" type="submit">Modifier</button>
              {% if (rdv.planifiable and rdv.planifiable.isValideTechnicien and rdv.planifiable.isSaisieTechnicien) %}
              <div class="btn-group">
                <a class="btn btn-sm {% if (rdv.planifiable.emailTransmission) %}btn-default{% else %}btn-success{% endif %}"
                   href="{{ path('devis_pdf', {'id': rdv.passage.id, 'service': service })}}"
                   title="Pdf du devis"
                   data-toggle="tooltip" >
                      <span class="glyphicon glyphicon-file"></span>
                </a>

                {% if (rdv.passage.emailTransmission) %}
                  {% set msgconfirm %}
                    {% if (rdv.planifiable.secondEmailTransmission) %}
                      Êtes vous sûr de vouloir envoyer le rapport de visite aux personnes suivantes : {{ rdv.passage.emailTransmission }} et {{ rdv.passage.secondEmailTransmission }} ?
                    {% else %}
                      Êtes vous sûr de vouloir envoyer le rapport de visite à la personne suivante : {{ rdv.passage.emailTransmission }} ?
                    {% endif %}
                  {% endset %}
                  <a
                    onclick="return confirm('{{ msgconfirm }}')"
                    class="btn btn-sm {% if rdv.planifiable.isPdfNonEnvoye() %}btn-success{% else %}btn-default{% endif %}"
                    href="{{ path('devis_pdf_envoi', {'id': rdv.planifiable.id, 'service': service })}}">
                    <span class="glyphicon glyphicon-send"></span> Envoyer mail
                  </a>
                {% endif %}
              </div>
              {% endif %}
            </div>
          </div>
        </div>
        {{ form_end(form) }}
    </div>
  </div>
