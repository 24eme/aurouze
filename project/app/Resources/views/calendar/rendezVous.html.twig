<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">{{ rdv.titre }}</h4>
        </div>
        <div class="modal-body">
            {{ form_start(form) }}
            <div class="row">
            	<div class="form-group col-xs-12">
            	    {{ form_label(form.titre) }}
            	    {{ form_errors(form.titre) }}
            	    {{ form_widget(form.titre) }}
                </div>
            	<div class="form-group col-xs-12">
                    {{ form_errors(form.description) }}
            	    {{ form_label(form.description, {'class': 'col-xs-3'}) }}
            	    {{ form_widget(form.description) }}
                </div>
            	<div class="form-group col-xs-8">
            	    {{ form_label(form.dateDebut) }}
            	    {{ form_errors(form.dateDebut) }}
            	    <div class="input-group">
            	        {{ form_widget(form.dateDebut) }}
            	        <div class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></div>
            	    </div>
                </div>
            	<div class="col-xs-4 bootstrap-timepicker timepicker">
            	    {{ form_label(form.timeDebut) }}
            		{{ form_errors(form.timeDebut) }}
            		<div class="input-group">
            		    {{ form_widget(form.timeDebut) }}
            		    <div class="input-group-addon"><i class="glyphicon glyphicon-time"></i></div>
            		</div>
                </div>
            	<div class="form-group col-xs-8">
            		{{ form_label(form.dateFin) }}
            	    {{ form_errors(form.dateFin) }}
            	    <div class="input-group">
            	        {{ form_widget(form.dateFin) }}
            	        <div class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></div>
            	    </div>
            	</div>
            	<div class="col-xs-4 bootstrap-timepicker timepicker">
                	{{ form_label(form.timeFin) }}
            		{{ form_errors(form.timeFin) }}
            		<div class="input-group">
            		    {{ form_widget(form.timeFin) }}
            		    <div class="input-group-addon"><i class="glyphicon glyphicon-time"></i></div>
            		</div>
            	</div>
                <div class="form-group col-xs-12">
    		        {{ form_widget(form.participants) }}
                </div>
            </div>
            <div class="text-right">
            {{ form_widget(form.save) }}
            </div>
            {{ form_end(form) }}
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
        </div>
    </div>
</div>
