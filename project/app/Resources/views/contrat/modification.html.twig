{% set _menu_active = '' %}
{% extends 'base.html.twig' %}
{% block body %}
	<style>
	label {
		font-weight: normal;
	}
	</style>
    <div id="wrapper">
        <h1>Création Contrat</h1>
        {{ form_start(form) }}
        <div class="panel panel-default">
            <div class="panel-heading"><strong>Contrat</strong></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-6">
                        {{ form_row(form.commercial) }}
                    </div>
                    <div class="col-xs-6">
                        {{ form_row(form.technicien) }}
                    </div>
                </div>
                <div class="row">
	                <div class="col-xs-12">
						{{ form_row(form.prestations) }}
	                </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        {{ form_row(form.nomenclature) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-4">
                        {{ form_row(form.typeContrat) }}
                    </div>
                    <div class="col-xs-4">
                        {{ form_label(form.duree) }}
                        {{ form_errors(form.duree) }}
                        <div class="input-group">
                            {{ form_widget(form.duree) }}
                            <div class="input-group-addon">mois</div>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        {{ form_label(form.duree_garantie) }}
                        {{ form_errors(form.duree_garantie) }}
                        <div class="input-group">
                            {{ form_widget(form.duree_garantie) }}
                            <div class="input-group-addon">mois</div>
                        </div>
                    </div>
                </div>
                <div class="row"> 
                    <div class="col-xs-4">
                        {{ form_row(form.nbPassage) }}
                    </div>
                    <div class="col-xs-4">
                        {{ form_label(form.dureePassage) }}
                        {{ form_errors(form.dureePassage) }}
                        <div class="input-group">
                            {{ form_widget(form.dureePassage) }}
                            <div class="input-group-addon">min.</div>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        {{ form_label(form.prixHt) }}
                        {{ form_errors(form.prixHt) }}
                        <div class="input-group">
                            {{ form_widget(form.prixHt) }}
                            <div class="input-group-addon">€</div>
                        </div>
                    </div>
                </div>

                <div class="row"> 
                    <div class="col-xs-12">
                        {{ form_row(form.nomenclature) }}
                    </div>
                </div>
            </div>
        </div>
        
        {{ form_widget(form.save) }}
        {{ form_end(form) }}
    </div>

{% endblock %}
