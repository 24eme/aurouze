{% set _menu_active = '' %}
{% extends 'base.html.twig' %}
{% block body %}
    <div id="wrapper">
        <h1>Cr√©ation Contrat</h1>
        {{ form_start(form) }}

		<style>
			#interventions li {
				margin: 0;
				padding: 10px 9px 10px 0;
			}
			.badge {
				background-color: #fff;
			}
			.glyphicon-remove-sign {
				font-size: 18px;
			}
		</style>

		<div class="panel panel-default" style="margin-bottom: 0;">
            <div class="panel-heading">Interventions</div>
        </div>
                <ul class="list-group" id="interventions">
                    {% for intervention in form.interventions %}
                         <li class="list-group-item row">
                            <div class="form-group col-xs-10">
                            	<p>Prestations <a href="javascript:void(0);" id="add_prestation_link" class="pull-right" style="font-size: 18px;"><span class="glyphicon glyphicon-plus-sign"></span></a></p>
                                <ul class="list-group" id="prestations" data-prototype="{% filter escape %}{{ include('contrat/prestation_prototype.html.twig', { 'form': intervention.prestations.vars.prototype }) }}{% endfilter %}">
				                    {% for prestation in intervention.prestations %}
				                         <li class="list-group-item row">
				                            <div class="form-group col-xs-4">
				                                {{ form_row(prestation.prestationType) }}
				                            </div>
				                            <div class="form-group col-xs-4">
				                                {{ form_row(prestation.animal) }}
				                            </div>
				                        </li>
				                    {% endfor %}
				                </ul>
                            </div>
                            <div class="form-group col-xs-2">
                                {{ form_row(intervention.facturable) }}
                            </div>
                        </li>
                    {% endfor %}
                </ul>
        
        {{ form_widget(form.save) }}
        {{ form_end(form) }}
    </div>

{% endblock %}

