<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Interventions</strong> (Acceptation du contrat le {{ contrat.dateAcceptation | date("d/m/y")}})  <span class='pull-right'>Date de d√©but : <strong>{{ contrat.dateDebut | date("d/m/Y")}}</strong></span></div>
    <div class="panel-body">
        <ul class="list-inline list-group">
            {% if(contrat.contratPassages | length) %}
                {% set firstEtbPassages = contrat.contratPassages | first %}
                {% for passage in firstEtbPassages.passagesDateSorted %}
                    {% set counter = loop.index %}
                    <li class="col-xs-4">
                        <div class="panel panel-default">
                            <div class="panel-heading"><span class="badge pull-left">{{ counter }}</span>&nbsp;<span class="pull-right"><span class="label label-xs {% if(passage.aPlanifie) %}btn-primary{% elseif(passage.planifie) %}btn-warning{% elseif(passage.realise) %}btn-success{% elseif(passage.enAttente) %}btn-info{% endif %}">{{ passage.getStatutLibelleActions() }}</span>&nbsp;le&nbsp;<strong>{{ passage.datePrevision|date("d/m/Y") }}</strong></span></div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-8">
                                        {% for prestation in passage.prestations %}
                                            {% if(prestation.wordToPicto) %}
                                                <span class="step size-24" title="{{  prestation.nomToString }}" data-toggle="tooltip" >
                                                    <i class="mdi-{{prestation.wordToPicto}}">&nbsp;</i></span>                                                          
                                                {%else%}
                                                <span class="label label-xs label-primary">{{  prestation.nomToString }}</span>
                                            {%endif%}
                                        {% endfor %}
                                    </div>
                                    <div class="col-xs-4 text-right">
                                        {% if(passage.mouvementDeclenchable) %}
                                            <span class="label label-xs label-default">facture</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
    </div>
</div>