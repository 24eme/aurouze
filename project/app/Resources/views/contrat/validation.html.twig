{% set _menu_active = '' %}
{% extends 'base.html.twig' %}
{% block body %}
    <div id="wrapper">
        <h1>Contrat en attente d'approbation <small>{{ contrat.getIdentifiant() }}</small> <a href="{{ path('contrat_modification', {'id': contrat.getId()}) }}" class="pull-right btn btn-warning"><span class="glyphicon glyphicon-pencil"></span>&nbsp;Modifier</a></h1>

        {{ include('contrat/contrat.html.twig', { 'contrat': contrat }) }}

        <div class="row">
            <div class="col-xs-4 text-left">
                <a href="{{ path('passage_etablissement', {'id': contrat.getEtablissement().id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-arrow-left"></span>&nbsp;Retour aux contrats</a>
            </div>
            <div class="col-xs-4 text-center">
                <a href="{{ path('contrat_suppression', {'id': contrat.getId()}) }}" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span>&nbsp;Supprimer</a>
            </div>
            <div class="col-xs-4 text-right">
                <a href="{{ path('contrat_validation', {'id': contrat.getId(), 'valide': 1}) }}" class="btn btn-success"><span class="glyphicon glyphicon-check"></span>&nbsp;Valider</a>
            </div>
        </div>
    </div>

{% endblock %}

