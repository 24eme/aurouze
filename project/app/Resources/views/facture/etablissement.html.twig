{% set _menu_active = 'facture' %}
{% extends 'base.html.twig' %}

{% block body %}

    {{ include('etablissement/choixForm.html.twig', {'form': formEtablissement}) }}

    <h3>Factures</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('facture_etablissement_generation', { 'id': etablissement.id })}}">Générer la facture</a>

    <h3>Mouvements à facturer</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Prix</th>
            </tr>
        </thead>
        <tbody>
        {% for mouvement in mouvements %}
            <tr>
                <td>{{ mouvement.prix }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
