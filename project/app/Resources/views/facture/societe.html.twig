{% set _menu_active = 'facture' %}
{% extends 'base.html.twig' %}

{% block body %}

    {{ include('societe/choixForm.html.twig', {'form': formSociete}) }}

    <h3>Factures</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Numéro</th>
                <th></th>
                <th class="text-right">Montant TTC</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.dateEmission | localizeddate("medium", "none", null, null, "d/MM/YYYY") }}</td>
                <td></td>
                <td><a href="{{ path('facture_pdf', {'id': facture.id })}}">{{ facture.id }}</a></td>
                <td class="text-right">{{ facture.montantTTC }} €</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="pull-right btn btn-primary" href="{{ path('facture_societe_generation', { 'id': societe.id })}}">Facturer</a>

    <h3>Mouvements à facturer</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Document d'origine</th>
                <th>Intitulé</th>
                <th class="text-right">Montant HT</th>
            </tr>
        </thead>
        <tbody>
        {% for mouvement in mouvements %}
            <tr>
                <td>{{ mouvement.origineDocument.id }}</td>
                <td>{{ mouvement.libelle }}</td>
                <td class="text-right">{{ mouvement.prix }} €</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
