{% set _menu_active = 'facture' %}
{% extends 'base.html.twig' %}

{% block body %}

    {{ include('societe/choixForm.html.twig', {'form': formSociete}) }}

    <h3>Factures</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Montant HT</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td><a href="{{ path('facture_pdf', {'id': facture.id })}}">{{ facture.id }}</a></td>
                <td>{{ facture.montantHT }} €</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('facture_societe_generation', { 'id': societe.id })}}">Générer la facture</a>

    <h3>Mouvements à facturer</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Prix</th>
            </tr>
        </thead>
        <tbody>
        {% for mouvement in mouvements %}
            <tr>
                <td>{{ mouvement.prix }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
