{% set _menu_active = 'facture' %}
{% extends 'base.html.twig' %}

{% block title %}Factures{% endblock title %}

    {% block body %}
        <ol class="breadcrumb">
            <li><a href="{{ path('facture') }}">Facture</a></li>
        </ol>

        {{ include('societe/choixForm.html.twig', {'urlTarget': path('facture_societe', {'id': '_id_'}), 'autofocus': true }) }}

        <div>
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation"><a href="{{ path('facture_previsionnel') }}">Prévisionnel des factures</a></li>
                <li role="presentation"><a href="{{ path('facture_mouvements') }}">Mouvements à facturer</a></li>
                <li class="active" role="presentation"><a href="#">Devis</a></li>
            </ul>
        </div>

        <h3>Devis pouvant être édités</h3>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="col-xs-2">Livraison</th>
                    <th class="col-xs-2">Client</th>
                    <th class="col-xs-2">Document</th>
                    <th class="col-xs-3">Contenu</th>
                    <th class="col-xs-1 text-right">Montant TTC</th>
                    <th class="col-xs-1 text-center">Planifié</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for devis in devisAFacturer %}
                    {{ include('devis/ligne.html.twig', {'document': devis}) }}
                {% endfor %}
            </tbody>
        </table>
    {% endblock %}
