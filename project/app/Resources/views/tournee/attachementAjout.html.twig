<div data-role="page" id="attachement_add_{{ planifiable.id }}" >

  <div data-role="header" style="overflow:hidden;" data-position="fixed">
  <h1>Tournée {{ technicien.identite }}</h1>
  <a href="#visualisation_{{ planifiable.id }}" class="ui-btn ui-icon-arrow-l ui-btn-icon-left" >
        &nbsp;Retour
  </a>
  <a  class="ui-btn ui-icon-check ui-btn-icon-right rapport"  href="#visualisation_{{ planifiable.id }}" >
      Valider&nbsp;
  </a>
  <div class="reloadWarning ui-bar ui-bar-b" style="display:none;">
  	<h3>Votre tournée a été modifiée. Il est préférable de la recharger.&nbsp;
        <a onclick="window.location.reload()" class="ui-btn ui-btn-right ui-icon-back ui-btn-icon-left" data-role="button" data-mini="true" >
          &nbsp;Recharger
        </a>
    </h3>
  </div>
  </div>
  <div data-role="main" class="ui-content">
  <form method="post" action="{{ attachementform.action }}" {{ form_enctype(attachementform.form) }} data-ajax="false" class="attachementform" >
  <div class="row">
        <div class="form-group">
            {{ form_label(attachementform.form.imageFile, null, {'label_attr': {'class': 'col-xs-4 control-label'}}) }}
            <div class="col-xs-8">
                {{ form_widget(attachementform.form.imageFile,{'attr' : {'accept' : "image/*;capture=camera"}}) }}
            </div>
        </div>
  </div>
  <hr />
  <div class="row">
      <div class="form-group">
      {{ form_label(attachementform.form.titre, "Titre :", {'label_attr': {'class': 'col-xs-4 control-label'}}) }}
        <div class="col-xs-8">
            {{ form_widget(attachementform.form.titre) }}
        </div>
      </div>
  </div>
  <hr />
  <div class="row">
    <div class="form-group">
      <label class="col-xs-4 control-label control-label required attachement-item" for="attachement_visibleClient">Visible des clients</label>
      <div class="col-xs-8 text-right">
        {{ form_widget(attachementform.form.visibleClient, {'attr': {'checked': 'checked'} }) }}
      </div>
    </div>
  </div>
  <hr />
  <div class="row">
      <div class="form-group">
          <button type="submit" class="ajoutImage">Ajouter la photo</button>
      </div>
  </div>
    {{ form_widget(attachementform.form.updatedAt, { 'attr': {'style': 'display: none'} }) }}
{{ form_end(attachementform.form) }}
</div>
</div>
