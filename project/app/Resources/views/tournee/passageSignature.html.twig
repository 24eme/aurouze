    <a href="#passage_rapport_{{ passage.id }}" class="passage_signature_valider ui-btn ui-icon-arrow-l ui-btn-icon-left" data-id="{{ passage.id }}" >
          &nbsp;Retour
    </a>
    <a data-id="{{ passage.id }}" class="passage_signature_vider ui-btn ui-icon-recycle ui-btn-icon-right" data-id="{{ passage.id }}" >
      vider&nbsp;
