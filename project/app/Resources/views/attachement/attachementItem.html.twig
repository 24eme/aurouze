<div class="col-xs-3" >
  <div class="thumbnail thumbnail-overlayed {% if attachement.visibleTechnicien %}visible-technicien{% endif %}">
    {% if attachement.isPdf %}
  <object type="application/pdf" width="100%" height="100%" style="min-height: 200px; max-height:200px; margin-bottom:0" class="vignette">
    <param name="src" value="{{ vich_uploader_asset(attachement, 'imageFile') }}" />
  </object>
  {% else %}
    <img src="{{ vich_uploader_asset(attachement, 'imageFile') }}" alt="{{ attachement.imageName }}" class="img-thumbnail vignette" style="min-height: 200px; max-height:200px; margin-bottom:0"/>
    {% endif %}
    <div class="overlay">
      <div class="overlay-remove">
        <a class="btn btn-danger btn-sm" style="border-radius: 50%;" onclick="return confirm('Êtes vous sûr de vouloir supprimer ce document?')" href="{{ path('attachement_delete', {'id': attachement.id }) }}" ><span class=" glyphicon glyphicon-remove"></span></a>
      </div>
      <div class="overlay-text">
        <p class="overlay-titre"><strong>{{ attachement.titre }}</strong></p>
        <p>Mis à jour : {{ attachement.updatedAt | localizeddate("medium", "none", null, null, "dd MMMM yyyy") }}</p>
        <p>Nom original : {{ attachement.originalName }}</p>
        <p>Technicien : {% if attachement.visibleTechnicien %}OUI{% else %}NON{% endif %}</p>
      </div>
    </div>
      <div class="caption">
        <div class="row">
          <div class="col-xs-9">
            <a href="{{ vich_uploader_asset(attachement, 'imageFile') }}" download="{{ vich_uploader_asset(attachement, 'imageFile') }}">
              <p><span class="glyphicon glyphicon-download-alt"></span>&nbsp;{{ attachement.titre }}</p>
            </a>
          </div>
          <div class="col-xs-3">
            <a data-toggle="modal" data-target="#document-modal-{{attachement.id}}" class="btn btn-sm btn-default">
            <span class="glyphicon glyphicon-pencil"></span>
            </a>
          </div>
        </div>
      </div>
  </div>
</div>
{{ include('attachement/attachementAjoutModal.html.twig', {'type' : 'attachement', 'uploadAttachementForm' : uploadModifAttachementForms[attachement.id]}) }}
