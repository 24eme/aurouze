<div class="col-xs-3" >
  <div class="thumbnail thumbnail-overlayed {% if attachement.visibleTechnicien %}visible-technicien{% endif %}" data-cible="modal-viewer-{{attachement.id }}">
    {% if attachement.isPdf %}
      <object type="application/pdf" width="100%" height="100%" style="min-height: 200px; max-height:200px; margin-bottom:0" class="vignette">
        <param name="src" value="{{ attachement.getBase64Src() }}" />
      </object>
  {% else %}
    <img src="{{ attachement.getBase64Src() }}" alt="{{ attachement.imageName }}" class="img-thumbnail vignette" style="min-height: 200px; max-height:200px; margin-bottom:0"/>
    {% endif %}
    <div class="overlay">
        <div class="content-overlay" style="min-height: 100px; width:100%;">

            <button data-cible="attachement_delete_{{attachement.id }}" onclick="return confirm('Êtes vous sûr de vouloir supprimer ce document?')" class="attachement-remove btn btn-danger btn-sm" style="border-radius: 10%; z-index: 10;" ><span class=" glyphicon glyphicon-remove"></span></a>


      </div>
          <div class="overlay-text">
            <p class="overlay-titre"><strong>{{ attachement.titre }}</strong></p>
            <p>Mis à jour : {{ attachement.updatedAt | localizeddate("medium", "none", null, null, "dd MMMM yyyy") }}</p>
            <p>Nom original : {{ attachement.originalName }}</p>
            <p>Technicien : {% if attachement.visibleTechnicien %}OUI{% else %}NON{% endif %}</p>
          </div>
        </div>
          <div class="caption">
            <div class="row">
              <div class="col-xs-12">
                <a href="{{ attachement.getBase64Src() }}" download="{{ attachement.getBase64Src() }}">
                  <p><span class="glyphicon glyphicon-download-alt"></span>&nbsp;{{ attachement.titre }}</p>
                </a>
              </div>
            </div>
        </div>
  </div>
  <a id="attachement_delete_{{attachement.id }}" style="border-radius: 10%; z-index: 10;" href="{{ path('attachement_delete', {'id': attachement.id }) }}" ></a>
</div>
<!-- The Modal -->
<div id="modal-viewer-{{attachement.id }}" class="modal-viewer">
  <span class="modal-viewer-close">&times;</span>
  {% if attachement.isPdf %}
    <object type="application/pdf" width="100%" height="100%" style="margin-bottom:0" >
      <param name="src" value="{{ attachement.getBase64Src() }}" />
    </object>
  {% else %}
  <img class="modal-viewer-content" id="img">
  {% endif %}
  <div class="modal-viewer-caption"></div>
</div>
