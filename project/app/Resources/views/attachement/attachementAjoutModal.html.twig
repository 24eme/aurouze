<div class="modal fade" id="document-modal-{{actif.id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <form class="eventPicture-form" action="{{ url }}" method="post" {{ form_enctype(form) }} >

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" id="eventPicture-modal-label">
                      Ajouter un document
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                          <div class="form-group">
                              {{ form_label(form.imageFile, "Fichier :", {'label_attr': {'class': 'col-xs-4 control-label'}}) }}
                              <div class="col-xs-8">
                                  {{ form_widget(form.imageFile) }}
                              </div>
                          </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="form-group">
                        {{ form_label(form.titre, "Titre :", {'label_attr': {'class': 'col-xs-4 control-label'}}) }}
                          <div class="col-xs-8">
                              {{ form_widget(form.titre) }}
                          </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="form-group">
                        <label class="col-xs-4 control-label control-label required" for="attachement_titre">Visible des techniciens :</label>
                          <div class="col-xs-8 text-right">
                              {{ form_widget(form.visibleTechnicien) }}
                          </div>
                        </div>
                        <div class="form-group">
                        <label class="col-xs-4 control-label control-label required" for="attachement_titre">Visible des clients :</label>
                          <div class="col-xs-8 text-right">
                              {{ form_widget(form.visibleClient) }}
                          </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" type="button" data-dismiss="modal">Fermer</button>
                    <button class="btn btn-primary" type="submit">Sauvegarder</button>
                </div>
          {{ form_end(form) }}
        </div>
    </div>
</div><!-- /.modal -->

<!-- Loading state -->
<div class="loading" tabindex="-1" role="img" aria-label="Loading"></div>
