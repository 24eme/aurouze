<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="{{ _charset }}">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="shortcut icon" type="image/ico" href="/favicon.ico?v=20170331" sizes="32x32" >
        <link rel="shortcut icon" type="image/png" href="/favicon.png?v=20170331" sizes="32x32" >
        <link rel="apple-touch-icon" sizes="129x129" href="/apple-touch-icon.png?v=20170331">
        <link rel="icon" type="image/png" href="/favicon192x192.png" sizes="192x192">

        <title>{% block title %}Aurouze{% endblock title %}</title>

        <link rel="stylesheet" href="{{ asset('/component/bootstrap/css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('/component/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('/component/bootstrap-timepicker/css/bootstrap-timepicker.css') }}" />
        <link rel="stylesheet" href="{{ asset('/component/bootstrap-switch/css/bootstrap-switch.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('/component/fullcalendar/css/fullcalendar.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('/component/select2/css/select2.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('/component/select2/css/select2-bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('/component/mervick/material-design-icons/css/material-icons.css') }}">
        <link rel="stylesheet" href="{{ asset('/component/leaflet/leaflet.css') }}">
        <link rel="stylesheet" href="{{ asset('/component/aurouze/aurouze.css') }}">
        <link rel="stylesheet" href="{{ asset('/component/leaflet-extra-markers/css/leaflet.extra-markers.css') }}">
        <link rel="stylesheet" media="print" href="{{ asset('/component/fullcalendar/css/fullcalendar.print.css') }}" />
        <link rel="stylesheet" href="{{ asset('/css/main.css') }}?date=20171030" />
        <link rel="stylesheet" media="print" href="{{ asset('/css/print.css') }}?date=20160622" />

        {% block stylesheets %}{% endblock %}
    </head>

    <body>
        <div id="ajax_notifications">
            <div class="alert alert-info text-center" style="display: none;" id="ajax_form_progress_notification">
                Traitement en cours...
            </div>
            <div class="alert alert-danger text-center alert-dismissible hidden" style="display: none;" id="ajax_form_error_notification">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Oops, une erreur est survenue ! <small>Vous pouvez <a href="javascript:location.reload();">recharger la page</a>(ou si le problème persiste contactez le 24eme)</small>
            </div>
        </div>

        <!-- Fixed navbar -->
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Voir le menu</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a id="logo" href="{{ path('accueil') }}" alt="aurouze"><img src="{{ asset('/images/logo.svg') }}" height="40" style="margin-top: 5px;"  class="hidden-sm" /> <img src="{{ asset('/apple-touch-icon.png') }}" height="40" style="margin-top: 5px;"  class="visible-sm" /></a>
                </div>
                {% set retard = 0 %}
                {% if(app.request.get('societe')) %}
                  {% set retard = facture_manager.getRetardDePaiementBySociete(app.request.get('societe')) | length %}
                {% endif %}
                {% set nbDocuments = 0 %}
                {% if(app.request.get('societe')) %}
                  {% set nbDocuments = attachement_manager.getAttachementsBySociete(app.request.get('societe')) | length %}
                {% endif %}
                {% if(app.request.get('etablissement')) %}
                  {% set nbDocuments = attachement_manager.getAttachementsByEtablissement(app.request.get('etablissement')) | length %}
                {% endif %}
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="{%if (_menu_active == 'societe') %}active{% endif %}"><a href="{% if(app.request.get('societe') and _menu_active != 'societe') %}{{ path('societe_visualisation', { id: app.request.get('societe').id }) }}{% else %}{{ path('societe') }}{% endif %}">Société</a>
                        </li>
                        <li class="{%if (_menu_active == 'contrat') %}active{% endif %}"><a href="{% if(app.request.get('societe') and _menu_active != 'contrat') %}{{ path('contrats_societe', { id: app.request.get('societe').id }) }}{% else %}{{ path('contrat') }}{% endif %}">Contrats</a>
                        </li>
                        <li class="{%if (_menu_active == 'passage') %}active{% endif %}">
                            <a href="{% if(app.request.get('etablissement') and _menu_active != 'passage') %}{{ path('passage_etablissement', { id: app.request.get('etablissement').id }) }}{% elseif(app.request.get('societe') and _menu_active != 'passage') %}{{ path('passage_societe', { id: app.request.get('societe').id }) }}{% else %}{{ path('passage') }}{% endif %}">Passages / Planif.</a>
                        </li>
                        <li class="{%if (_menu_active == 'facture') %}active{% endif %}"><a href="{% if(app.request.get('societe') and _menu_active != 'facture') %}{{ path('facture_societe', { id: app.request.get('societe').id }) }}{% else %}{{ path('facture') }}{% endif %}" >Factures</a>
                        </li>
                        <li class="{%if (_menu_active == 'paiements') %}active{% endif %}"><a href="{% if(app.request.get('societe') and _menu_active != 'paiements') %}{{ path('paiements_societe', { id: app.request.get('societe').id }) }}{% else %}{{ path('paiements_liste') }}{% endif %}">Paiements</a></li>
                        <li class="{%if (_menu_active == 'paiementsRetard') %}active{% endif %}"><a href="{% if(app.request.get('societe') and _menu_active != 'paiementsRetard') %}
                      {{ path('factures_retard_societe',{ id : app.request.get('societe').id }) }}
                      {% else %}  {{ path('factures_retard') }}{% endif %}"></span>Retard{% if(retard > 0) %}&nbsp;<span class="badge badge-danger">{{ retard }}</span>{% endif %}</a></li>
                        <li class="{%if (_menu_active == 'attachements') %}active{% endif %}"><a href="{% if(app.request.get('etablissement') and _menu_active != 'attachements') %}{{ path('attachements_entite', { id: app.request.get('etablissement').id }) }}{% elseif(app.request.get('societe') and _menu_active != 'attachements') %}{{ path('attachements_entite', { id: app.request.get('societe').id }) }}{% else %}{{ path('attachements_last') }}{% endif %}">
                          Documents&nbsp;{% if(nbDocuments > 0) %}&nbsp;<span class="badge badge-muted">{{ nbDocuments }}</span>{% endif %}
                      </a></li>
                    </ul>

                    {% if(app.request.get('etablissement')) %}<!--<p id="nav_nom_etablissement" class="navbar-text truncate visible-lg-block"><strong>{{ app.request.get('etablissement').societe.raisonSociale }}</strong></p>-->{% endif %}

                    <ul class="nav navbar-nav pull-right">
                        <li class="{%if (_menu_active == 'recherche') %}active{% endif %}"><a href="{{ path('recherche')}}"><span class="glyphicon glyphicon-search"></span><span class="hidden-lg hidden-md hidden-sm"> Recherche</span></a></li>
                        <li class="{%if (_menu_active == 'calendar') %}active{% endif %}"><a href="{{ path('calendarManuel') }}"><span class="glyphicon glyphicon-calendar"></span><span class="hidden-md hidden-sm"> Calendrier</a></span></li>
                        <li class="{%if (_menu_active == 'statistiques') %}active{% endif %}"><a href="{{ path('statistiques') }}"><span class="glyphicon glyphicon-stats"></span><span class="hidden-lg hidden-md hidden-sm"> Statistiques</span></a></li>
                        <li class="{%if (_menu_active == 'tournee') %}active{% endif %}"><a href="{{ path('tournees') }}"><span class="glyphicon glyphicon-road"></span><span class="hidden-lg hidden-md hidden-sm"> Tournées</span></a></li>
                        <li class="dropdown {%if (_menu_active == 'configuration' or _menu_active == 'erreurs' ) %}active{% endif %}">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-cog" ></span><span class="hidden-lg hidden-md hidden-sm">  Paramètres</span></a>
                          <ul class="dropdown-menu dropdown-menu-right">
                            <li class="{%if (_menu_active == 'configuration') %}active{% endif %}"><a href="{{ path('configuration') }}"><span class="glyphicon glyphicon-cog" ></span>&nbsp;&nbsp;Paramètres</a></li>
                            <li class="{%if (_menu_active == 'erreurs') %}active{% endif %}"><a href="{{ path('passage_erreurs') }}"><span class="mdi mdi-lg mdi-announcement"></span>&nbsp;Passages en erreur</li>
                            <li class="{%if (_menu_active == 'contrat_erreurs') %}active{% endif %}"><a href="{{ path('contrats_erreurs') }}"><span class="mdi mdi-lg mdi-announcement"></span>&nbsp;Contrats en erreur</li>
                              <li class="{%if (_menu_active == 'contrat_decalage') %}active{% endif %}"><a href="{{ path('contrats_decalage') }}"><span class="mdi mdi-lg mdi-announcement"></span>&nbsp;Contrats décalés</li>
                            <li><a href="{{ path('contrats_reconduction_massive') }}" ><span class="glyphicon glyphicon-refresh"></span>&nbsp;Reconduction massive</a></li>
                             <li class="{%if (_menu_active == 'tournee') %}active{% endif %}"><a href="{{ path('tournees') }}"><span class="glyphicon glyphicon-road" data-toggle="tooltip" title="Tournées"></span>&nbsp;Tournées</a></li>
                          </ul>
                    </li>
                  </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            {% block body %}{% endblock %}
        </div>

        <div class="modal" id="modal-calendrier-infos" tabindex="-1" role="dialog"></div>

        <script type="text/javascript" src="{{ asset('/component/jquery/js/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/jquery-ui/js/jquery-ui.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/bootstrap/js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/bootstrap-datepicker/dist/locales/bootstrap-datepicker.fr.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/bootstrap-switch/js/bootstrap-switch.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/bootstrap-timepicker/js/bootstrap-timepicker.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/moment/js/moment.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/fullcalendar/js/fullcalendar.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/fullcalendar/js/fullcalendar-languages.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/select2/js/select2.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/select2/js/i18n/fr.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/leaflet/leaflet.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/leaflet-extra-markers/js/leaflet.extra-markers.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/component/typeahead/typeahead.bundle.min.js?date=201712111731') }}"></script>
        <script type="text/javascript" src="{{ asset('/js/functions.js') }}"></script>
        <script type="text/javascript" src="{{ asset('/js/calendar-settings.js?date=201703151048') }}"></script>
        <script type="text/javascript" src="{{ asset('/js/main.js?date=201904161718') }}"></script>

        {% block javascripts %}{% endblock %}

    </body>
</html>
