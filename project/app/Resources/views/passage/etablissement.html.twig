{% set _menu_active = 'passage' %}
{% extends 'base.html.twig' %}
{% block body %}

    {{ include('etablissement/choixForm.html.twig', {'form': formEtablissement}) }}

    <div class="row">
        <div class="col-xs-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <strong>{{ etablissement.nom }}</strong>
                        </div>
                        <div class="col-xs-6">
                            Société {{ etablissement.raisonsociale }}
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-10">
                            {{ etablissement.adresse.intitule }}
                        </div>
                        <div class="col-xs-2">
                            <i style="cursor: default;" class="pull-right mdi mdi-{{ etablissement.icon }} mdi-4x" title="{{ etablissement.type }}" data-toggle="tooltip" ></i>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            Tél fixe : {{ etablissement.telephonefixe }}
                        </div>
                        <div class="col-xs-6">
                            Tél portable : {{ etablissement.telephoneportable }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-4">
            <div id="map" style="width: 100%; height: 148px;" data-geojson="{{ geojson | json_encode(constant('JSON_HEX_QUOT')) }}"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <a href="{{ path('contrat_creation', {'id': etablissement.getId()}) }}" class="btn btn-sm btn-warning"><strong><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;Créer un nouveau contrat</strong></a>
            <a href="{{ path('passage_creation', {'id': etablissement.getId()}) }}" class="btn btn-sm btn-warning"><strong><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;Créer un passage</strong></a>
            <hr />
            {% for contrat in contrats %}
                {% set passagesEtablissement = contrat.getPassagesEtablissementNode(etablissement) %}

                {% if(passagesEtablissement is not null) %}
                    <div class="panel {% if(not contrat.isTerminee) %}panel-default{% else %}panel-success{% endif %}">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                <a class="btn btn-default btn-xs pull-right" href="{{ path('contrat_visualisation', { 'id': contrat.id }) }}">Voir</a>
                                </span>
                                Contrat {% if(not contrat.isTerminee) %}en cours jusqu'au{% else %}terminé le{% endif %}
                                {{ contrat.dateFin | localizeddate("medium", "none", null, null, "d MMMM YYYY") }}
                                n° {{ contrat.numeroArchive }}
                                <small>sur {{ contrat.duree }} mois</small>
                            </h3>
                        </div>

                        <div class="list-group">
                            {% for pe in passagesEtablissement.getPassagesSorted %}
                                <div class="list-group-item {% if pe.realise %}list-group-item-success{% endif %} {% if pe.planifie %}list-group-item-warning{% endif %}">
                                    <div class="row">
                                        <div class="col-xs-4">
                                            {{ pe.dateDebut | localizeddate('full', 'none') | capitalize }}{% if(not pe.isPlanifie or pe.isRealise) %} à {{ pe.dateDebut | localizeddate('none', 'short') }}{% endif %}
                                        </div>
                                        <div class="col-xs-2">
                                            {% for prestation in pe.prestations %}
                                                {% if(prestation.wordToPicto) %}
                                                    <span class="step size-24" title="{{  prestation.nomToString }}" data-toggle="tooltip" >
                                                        <i id="icon-{{prestation.wordToPicto}}" class="icon-{{prestation.wordToPicto}}">&nbsp;</i></span>
                                                    {%else%}
                                                    <span class="label label-xs label-primary">{{  prestation.nomToString }}</span>
                                                {%endif%}
                                            {% endfor %}
                                        </div>
                                        <div class="col-xs-2">
                                            {% if(pe.duree) %}<span><i class="mdi mdi-schedule mdi-lg"></i>&nbsp;{{ pe.duree }}</span>{% endif %}
                                        </div>
                                        <div class="col-xs-2">
                                            <ul class="list-inline list-unstyled">
                                                {% for technicien in pe.techniciens %}
                                                    <li>
                                                        <i class="mdi mdi-face mdi-lg"></i>&nbsp;{{ technicien.identite }}
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                        <div class="col-xs-2 text-right">
                                            {% if pe.realise %} <span class="btn btn-block btn-sm btn-default">Modifier</span>
                                            {% elseif pe.planifie  %}<a class="btn btn-block btn-sm btn-warning" href="{{ path('passage_edition', { id: pe.id })}}">Saisir le rapport</a>
                                            {% elseif pe.aPlanifie %}
                                                    {% for technicien in pe.techniciens %}
                                                            <a class="btn btn-sm btn-block btn-primary" href="{{path('calendar', {'passage' : pe.passageIdentifiant,'technicien' : technicien.identite, 'calendrier' : pe.datedebut|date('d-m-Y')})}}">Planifier</a>
                                                    {% endfor %}
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>

{% endblock %}
