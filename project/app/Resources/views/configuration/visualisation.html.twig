{% set _menu_active = 'configuration' %}
{% extends 'base.html.twig' %}
{% block body %}
    <div id="wrapper">
        <h1>Configuration</h1>
        <div class="panel panel-default" style="margin-bottom: 0;">
            <div class="panel-heading">Type de prestations </div>

            <div class="panel-body">
                {% for prestation in configuration.prestations %}
                    <div class="row form-group">
                        <div class="col-xs-12 text-left">
                            {{ prestation.nom }}
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
        <br/>

        <div class="row">
            <div class="col-xs-12">
                <a href="{{ path('configuration_modification_prestations') }}" class="pull-right btn btn-warning">Modifier les prestation</a>
            </div>
        </div>
        <br/>  <br/>
        <hr/>
        <br/>  <br/>
          <div class="row">
              <div class="col-xs-12">
                  <a href="{{ path('configuration_modification_produit') }}" class="pull-right btn btn-warning"><span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Ajouter un produit</a>
              </div>
          </div>
        <br/>  <br/>
        <div class="panel panel-default" style="margin-bottom: 0;">
            <div class="panel-heading">Liste des Produits </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Conditionnement</th>
                        <th>Prix d'achat HT</th>
                        <th>Prix prestation HT</th>
                        <th>Prix de vente HT</th>
                        <th class="text-center" >Modification</th>
                    </tr>
                </thead>
                <tbody>
                    {% for produit in configuration.produits %}
                    <tr>
                        <td>{{ produit.nom }}</td>
                        <td>{{ produit.conditionnement }}</td>
                        <td class="text-right">{{ produit.prixHt | number_format(2, '.', ' ') }}</td>
                        <td class="text-right">{{ produit.prixPrestation| number_format(2, '.', ' ') }}</td>
                        <td class="text-right">{{ produit.prixVente| number_format(2, '.', ' ') }}</td>
                        <td class="text-center">
                          <a href="{{ path('configuration_modification_produit',{'identifiant': produit.identifiant }) }}" data-toggle="tooltip" title="Modifier le produit {{ produit.nom }}" class="pull-right btn btn-default">
                            <span class="glyphicon glyphicon-pencil"></span>
                          </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <br/>
        <div class="row">
            <div class="col-xs-12">
                <a href="{{ path('configuration_modification_produit') }}" class="pull-right btn btn-warning"><span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Ajouter un produit</a>
            </div>
        </div>
        <br/>  <br/>
    </div>
{% endblock %}
