    <div class="row">
        {{ form_start(form) }}
        <div class="panel panel-default">
            <div class="panel-heading"><strong>Etablissement</strong></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-6">
                        {{ form_row(form.raisonSociale) }}
                    </div>
                    <div class="col-xs-3">
                        {{ form_row(form.nom) }}
                    </div>
                    <div class="col-xs-3">
                        {{ form_row(form.type) }}
                    </div>
                </div>
                <hr style="margin-top: 5px;" />
                <div class="row">
                    <div class="col-xs-6">
                        {{ form_row(form.adresse.adresse) }}
                    </div>
                    <div class="col-xs-3">
                        {{ form_row(form.adresse.codePostal) }}
                    </div>
                    <div class="col-xs-3">
                        {{ form_row(form.adresse.commune) }}
                    </div>
                </div>
                <hr style="margin-top: 5px;" />
                <div class="row">
                    <div class="col-xs-6">
                        {{ form_row(form.adresse.adresse) }}
                    </div>
                    <div class="col-xs-3">
                        {{ form_row(form.adresse.codePostal) }}
                    </div>
                    <div class="col-xs-3">
                        {{ form_row(form.adresse.commune) }}
                    </div>
                </div>
                <hr style="margin-top: 5px;" />
                <div class="row">
                    <div class="col-xs-4">
                        {{ form_row(form.contactCoordonnee.telephoneFixe) }}
                    </div>
                    <div class="col-xs-4">
                        {{ form_row(form.contactCoordonnee.telephoneMobile) }}
                    </div>
                    <div class="col-xs-4">
                        {{ form_row(form.contactCoordonnee.fax) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        {{ form_row(form.contactCoordonnee.email) }}
                    </div>
                    <div class="col-xs-6">
                        {{ form_row(form.contactCoordonnee.siteInternet) }}
                    </div>
                </div>
                    <hr style="margin-top: 5px;" />
                <div class="row">
                    <div class="col-xs-12">
                        {{ form_row(form.commentaire) }}
                    </div>
                </div>

            </div>
        </div>        
        <div class="row">
            <div class="col-xs-12">
                {{ form_widget(form.save) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}