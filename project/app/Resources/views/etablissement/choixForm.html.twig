<div class="row">
    <div class="col-xs-12">
        <h3>Rechercher par établissement</h3>
        {{ form_start(form, {'attr': { 'novalidate': 'novalidate' } }) }} 
            <div class="row">  
                <div class="form-group">
                    <div class="col-xs-9">
                        <div class="error_list">{{ form_errors(form.etablissements) }}</div>
                        {{ form_widget(form.etablissements, {'attr': {'class': 'form-control select2 select2-ajax', 'data-placeholder': 'Rechercher un établissement', 'data-url' : path('etablissement_search') } }) }}
                    </div>     
                <div class="col-xs-1">
                    <button type="submit" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-search"></span></button>
                </div>
                </div>
            </div>
        {{form_end(form)}}
    </div>
</div> 
