{% set _menu_active = 'societe' %}
{% block title %}{{ societe.raisonSociale }}{% endblock title %}
{% extends 'base.html.twig' %}
{% block body %}
 <ol class="breadcrumb">
        <li><a href="{{ path('societe') }}">Societe</a></li>
        <li><a href="{{ path('societe_visualisation',{ 'id' : societe.id }) }}">&nbsp;{{ societe.raisonSociale }}&nbsp;<small>{{societe.adresse.intitule }}</small></a></li>
    </ol>

     {{ include('societe/choixForm.html.twig', {'form': form}) }}
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="list-group">
                    <div class="list-group-item">
                        <h3 style="margin-top:0; margin-bottom: 0;">
                        	<i class="mdi mdi-business mdi-lg"></i>
                            {{  societe.raisonSociale }}
                        	{% if not societe.actif %} <small><label class="label label-xs label-danger">SUSPENDU</label></small>{% endif %}
                            <a class="btn btn-sm btn-default pull-right" href="{{ path('societe_modification', {'id': societe.id}) }}">Modifier</a>
                            <small class="pull-right" style="padding-top: 5px; padding-right: 10px;">
                                        <label class="label label-xs label-info ">{{  nbContratsSociete }} contrat(s)</label>
                            </small>&nbsp;
                        </h3>
                    </div>
                    <div class="list-group-item text-center">
                        <span class="lead" style="font-size: 19px;">
                            {{ societe.adresse.adresseFormatee | nl2br }} <br />
                            {{ societe.adresse.codePostal }} {{ societe.adresse.commune }}
                        </span>
                    </div>
                    <div class="list-group-item">
                        {% if (societe.contactCoordonnee.telephoneFixe or societe.contactCoordonnee.telephoneMobile or societe.contactCoordonnee.fax or societe.contactCoordonnee.email or societe.contactCoordonnee.siteInternet)  %}
                            {% if (societe.contactCoordonnee.telephoneFixe is defined and societe.contactCoordonnee.telephoneFixe)%}
                                <i class="glyphicon glyphicon-earphone"></i>&nbsp;{{ societe.contactCoordonnee.telephoneFixe }}&nbsp;
                            {%endif%}
                            {% if (societe.contactCoordonnee.telephoneMobile is defined and societe.contactCoordonnee.telephoneMobile)%}
                                <i class="glyphicon glyphicon-phone"></i>&nbsp;{{ societe.contactCoordonnee.telephoneMobile }}&nbsp;
                            {% endif %}
                            {% if (societe.contactCoordonnee.fax is defined and societe.contactCoordonnee.fax)%}
                                <i class="glyphicon glyphicon-print"></i>&nbsp;{{ societe.contactCoordonnee.fax }}&nbsp;
                            {% endif %}
                            {% if(societe.contactCoordonnee.email is defined and societe.contactCoordonnee.email)%}
                                <i class="glyphicon glyphicon-envelope"></i>&nbsp;{{ societe.contactCoordonnee.email }}&nbsp;
                            {% endif %}
                            {% if(societe.contactCoordonnee.siteInternet is defined and societe.contactCoordonnee.siteInternet)%}
                                <i class="glyphicon glyphicon-globe"></i>&nbsp;{{ societe.contactCoordonnee.siteInternet }}&nbsp;
                            {% endif %}
                        {% else %}
                            <em class="text-muted">Aucune information de contact définie</em>
                        {% endif %}
                    </div>

                    <div class="list-group-item">
                        <ul class="list-inline" style="margin-bottom: 0">
                            {% if(societe.provenance) %}
                                <li>Provenance : {{ societe.provenance }}</li>
                                {% endif %}
                            <li>Code comptable : {{ societe.codeComptable }}</li>
                        </ul>
                    </div>
                    {% if(societe.tags | length > 0) %}
                        <div class="list-group-item">
                            {% for tag in societe.tags %}
                                <span type="button" class="btn btn-info btn-xs">{{ tag }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}
                    {% if(societe.commentaire) %}
                        <div class="list-group-item">
                            {{ societe.commentaire }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <h2 style="margin-top: 0;"><a class="btn btn-sm btn-default pull-right" href="{{ path('etablissement_modification', {'societe': societe.id}) }}"><span aria-hidden="true" class="glyphicon glyphicon-plus"></span>&nbsp;Ajouter un établissement</a>Etablissements <span class="badge">{{ societe.getEtablissementsByStatut(true) | length }}</span></h2>

    {{ include('etablissement/list.html.twig', {'etablissements': societe.getEtablissementsByStatut(true)}) }}
    {{ include('etablissement/list.html.twig', {'etablissements': societe.getEtablissementsByStatut(false)}) }}

    <h2 style="margin-top: 0;"><a class="btn btn-sm btn-default pull-right" href="{{ path('compte_modification', {'societe': societe.id}) }}"><span aria-hidden="true" class="glyphicon glyphicon-plus"></span>&nbsp;Ajouter un compte</a>Comptes <span class="badge">{{ societe.comptes | length }}</span></h2>
    <div class="row">
        {% for compte in societe.comptes %}
            <div class="col-xs-4">
                <div class="panel panel-default">
                    <div class="list-group">
                        <div class="list-group-item">
                            <a class="btn btn-xs btn-default pull-right" href="{{ path('compte_modification', {'societe': societe.id, 'id': compte.id }) }}">Modifier</a>
                            <h5 style="margin-top: 0;margin-bottom: 0;"><i class="mdi mdi-face mdi-lg"></i> {{ compte.identite }}{% if not compte.actif %} <small><label class="label label-xs label-danger">SUSPENDU</label></small>{% endif %}
                            </h5>
                        </div>
                        <div class="list-group-item text-center">
                            {% if (not compte.sameAdresseThanSociete) %}
                                {{ compte.adresse.adresse }} <br />
                                {{ compte.adresse.codePostal }} {{ compte.adresse.commune }}
                            {% else %}
                                <em class="text-muted">Même adresse que la société</em>
                            {% endif %}
                        </div>
                        <div class="list-group-item text-center">
                            {% if(not compte.sameContactCoordonneeThanSociete) %}
                                {%if(compte.contactCoordonnee.telephoneFixe is defined and compte.contactCoordonnee.telephoneFixe)%}
                                    <i class="glyphicon glyphicon-earphone"></i>&nbsp;{{ compte.contactCoordonnee.telephoneFixe }}&nbsp;
                                {%endif%}
                                {%if(compte.contactCoordonnee.telephoneMobile is defined and compte.contactCoordonnee.telephoneMobile)%}
                                    <i class="glyphicon glyphicon-phone"></i>&nbsp;{{ compte.contactCoordonnee.telephoneMobile }}&nbsp;
                                {%endif%}
                                {%if(compte.contactCoordonnee.fax is defined and compte.contactCoordonnee.fax)%}
                                    <i class="glyphicon glyphicon-print"></i>&nbsp;{{ compte.contactCoordonnee.fax }}&nbsp;
                                {%endif%}&nbsp;
                            {% else %}
                                <em class="text-muted">Même contact que la société</em>
                            {% endif %}
                        </div>
                        {% if(not compte.sameContactCoordonneeThanSociete) %}
                            <div class="row">
                                <div class="col-xs-12">
                                    {%if(compte.contactCoordonnee.email is defined and compte.contactCoordonnee.email)%}
                                        <i class="glyphicon glyphicon-envelope"></i>&nbsp;{{ compte.contactCoordonnee.email }}&nbsp;
                                    {%endif%}
                                    {%if(compte.contactCoordonnee.siteInternet is defined and compte.contactCoordonnee.siteInternet)%}
                                        <i class="glyphicon glyphicon-globe"></i>&nbsp;{{ compte.contactCoordonnee.siteInternet }}&nbsp;
                                    {%endif%}&nbsp;
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>



{% endblock %}
